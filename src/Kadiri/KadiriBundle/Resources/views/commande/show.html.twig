{% extends 'base.html.twig' %}

{% block body %}
    <h1>Client</h1>

    <table class="table table-bordered table-striped table-condensed">
        <tbody>
            
            <tr>
                <th>Numero Client</th>
                <td>{{ medecin.identifiant }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ medecin.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ medecin.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ medecin.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        
        <li>
            <a href="{{ path('medecin_edit', { 'id': medecin.id }) }}">Modifier</a>
        </li>
        <br>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
