{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits</h1>

    <table class="table table-bordered table-striped table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ produit.reference }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ produit.designation }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Prix unitaire</th>
                <td>{{ produit.prixUnitaire }}</td>
            </tr>
            <tr>
                <th>Prix total</th>
                <td>{{ produit.prixtotal }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
            

            <div class="span1">
        
        
       
            <a class="btn btn-primary" href="{{ path('produits_edit', { 'id': produit.id }) }}">Modifier</a>
        
            </div>
            <div class="span1">
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-primary">
            {{ form_end(delete_form) }}
            </div>
        </div>
   
{% endblock %}
